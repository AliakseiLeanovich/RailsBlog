<div class="col-md-5 col-md-offset-3">
  <h2><%=t('devise.registrations.new.sign_up')%></h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.email_field :email, autofocus: true, hide_label: true,
                        placeholder: t('devise.registrations.new.email') %>

      <%= f.text_field :nickname, required: true, hide_label: true,
                       placeholder: t('devise.registrations.edit.nickname') %>

      <% if @validatable %>
          <em>(<%= @minimum_password_length %> <%=t('devise.registrations.new.characters')%>)</em>
      <% end %>

      <%= f.password_field :password, autocomplete: "off", hide_label: true,
                           placeholder: t('devise.registrations.new.password') %>
      <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true,
                           placeholder: t('devise.registrations.new.password_confirmation') %>
      <%= recaptcha_tags %>
      <%= f.submit t('devise.registrations.new.finish_sign_up'), class: "btn btn-success" %>
  <% end %>

  <br/>
  <%= render "devise/shared/links" %>
</div>