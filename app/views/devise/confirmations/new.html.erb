<div class="col-md-5 col-md-offset-3">
  <h2><%= t('devise.confirmations.resend')%></h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post}) do |f| %>
      <%= devise_error_messages! %>

      <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: t(:email) %>
      <%= f.submit t('devise.confirmations.resend'), class: "btn btn-success" %>
  <% end %>

  <br/>
  <%= render "devise/shared/links" %>
</div>