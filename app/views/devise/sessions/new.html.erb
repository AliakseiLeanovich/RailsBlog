<div class="col-md-5 col-md-offset-3">
  <h2><%=t('devise.sessions.new.login')%></h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, hide_label: true,
                        placeholder: t('devise.sessions.new.email') %>
      <%= f.password_field :password, autocomplete: "off", hide_label: true,
                           placeholder: t('devise.sessions.new.password') %>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, label: t('devise.sessions.new.remember') %>
      <% end -%>

      <%= f.submit t('devise.sessions.new.enter'), class: "btn btn-success" %>
  <% end %>

  <br/>
  <%= render "devise/shared/links" %>
</div>