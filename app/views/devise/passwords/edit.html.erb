<div class="col-md-5 col-md-offset-3">
  <h2><%= t('devise.passwords.edit.change_password')%></h2>

  <%= bootstrap_form_for(resource, as: resource_name,
                         url: password_path(resource_name), html: {method: :put}) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, autofocus: true, autocomplete: "off",
                           hide_label: true, placeholder: t('devise.passwords.edit.new_password') %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
                           hide_label: true, placeholder: t('devise.passwords.edit.confirm_password') %>

      <%= f.submit t('devise.passwords.edit.change_password'), class: "btn btn-success" %>

  <% end %>

  <br/>
  <%= render "devise/shared/links" %>
</div>