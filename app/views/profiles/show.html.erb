<%- model_class = Profile -%>
<div class="page-header">
  <h1><%= t("profile.show_title") %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t("profile.name") %>:</strong></dt>
  <dd><%= @profile.name %></dd>
  <dt><strong><%= t("profile.description") %>:</strong></dt>
  <dd><%= @profile.description %></dd>
  <dt><strong><%= t("profile.lat") %>:</strong></dt>
  <dd><%= @profile.lat %></dd>
  <dt><strong><%= t("profile.lng") %>:</strong></dt>
  <dd><%= @profile.lng %></dd>
  <dt><strong><%= t("profile.user") %>:</strong></dt>
  <dd><%= @profile.user.try(:nickname) %></dd>
</dl>

<%= link_to t('.back', :default => t("profile.back")),
              profiles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("profile.edit")),
              edit_profile_path(@profile), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("profile.delete")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("profile.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
