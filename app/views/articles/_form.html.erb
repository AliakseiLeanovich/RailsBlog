
  <%= bootstrap_form_for @article do |f| %>

      <% if @article.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@article.errors.count, "error") %> prohibited
              this article from being saved:</h2>
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <%= f.text_field :title, hide_label: true, placeholder: "Enter post title" %>
      <%= f.text_area :text, hide_label: true, placeholder: "Enter post text", rows: 15 %>
      <%= f.submit "Save" %>
      <%= link_to 'Cancel', articles_path, role: "button", class: "btn btn-default" %>
  <% end %>