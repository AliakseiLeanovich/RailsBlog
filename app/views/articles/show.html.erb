<div class="row">
  <div class="col-sm-8 blog-main col-md-offset-1">
    <div class="blog-post">

      <h2 class="blog-post-title"><%= @article.title %></h2>
      <p class="blog-post-meta">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <%= link_to  @article.user.nickname, articles_path(:user_id => @article.user.id) %>
      </p>
      <p class="blog-post-meta"><%= @article.created_at.strftime("%d/%m/%Y %H:%M") %></p>

      <p><%= @article.text %></p>

      <%if !@article.tag_list.empty? %>
      <p>
        <%= t('post.label.tags2')%>
        <%= tag_buttons(@article.tag_list) %>
      </p>
      <% end %>

    </div>
  </div>

  <div class="col-sm-2">
    <div class="panel panel-default">
      <div class="panel-heading"><%= t('post.label.edit') %></div>
      <div class="panel-body">
        <% if current_user == @article.user %>
            <p>
              <%= link_to t('post.button.edit'), edit_article_path(@article),
                          role: "button", class: "btn btn-default" %>
            </p>
            <p>
              <%= link_to t('post.button.delete'), article_path(@article), method: :delete,
                          role: "button", class: "btn btn-default" %>
            </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-6 col-md-offset-1">

    <h4><%= t('comment.label.title')%></h4>
    <%= render @article.comments %>
    <br>
    <h4><%= t('comment.label.add') %></h4>
    <%= render "comments/form" %>

  </div>
</div>


