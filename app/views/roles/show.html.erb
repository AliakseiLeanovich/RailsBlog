<div class="page-header">
  <%= link_to roles_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_role_path(@role), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show role</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @role.title %></dd>

  <dt>Description:</dt>
  <dd><%= @role.description %></dd>
  
  <dt>Users:</dt>
  <dd><%= @role.users.map{|user| user.nickname}.join(', ').html_safe %></dd>

  <dt>Create ability:</dt>
  <dd>
  <% if @role.create_ability %>
  <span class="glyphicon glyphicon-plus"></span>          
  <% else %>
  <span class="glyphicon glyphicon-minus"></span>
  <% end %>
  </dd>

  <dt>Read ability:</dt>
  <dd>
  <% if @role.read_ability %>
  <span class="glyphicon glyphicon-plus"></span>          
  <% else %>
  <span class="glyphicon glyphicon-minus"></span>
  <% end %>
  </dd>

  <dt>Update ability:</dt>
  <dd>
  <% if @role.update_ability %>
  <span class="glyphicon glyphicon-plus"></span>          
  <% else %>
  <span class="glyphicon glyphicon-minus"></span>
  <% end %>
  </dd>

  <dt>Delete ability:</dt>
  <dd>
  <% if @role.delete_ability %>
  <span class="glyphicon glyphicon-plus"></span>          
  <% else %>
  <span class="glyphicon glyphicon-minus"></span>
  <% end %>
  </dd>

</dl>
