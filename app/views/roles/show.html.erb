<div class="page-header">
  <%= link_to roles_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
      <%= t('role.back') %>
  <% end %>
  <%= link_to edit_role_path(@role), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
      <%= t('role.edit') %>
  <% end %>
  <h1><%= t('role.label') %></h1>
</div>

<dl class="dl-horizontal">
  <dt><%= t('role.title') %>:</dt>
  <dd><%= @role.title %></dd>

  <dt><%= t('role.description') %>:</dt>
  <dd><%= @role.description %></dd>
  
  <dt><%= t('role.users') %>:</dt>
  <dd><%= @role.users.map{|user| user.nickname}.join(', ').html_safe %></dd>

  <dt><%= t('role.create_ability') %>:</dt>
  <dd>
  <% if @role.create_ability %>
  <span class="glyphicon glyphicon-plus"></span>          
  <% else %>
  <span class="glyphicon glyphicon-minus"></span>
  <% end %>
  </dd>

  <dt><%= t('role.read_ability') %>:</dt>
  <dd>
  <% if @role.read_ability %>
  <span class="glyphicon glyphicon-plus"></span>          
  <% else %>
  <span class="glyphicon glyphicon-minus"></span>
  <% end %>
  </dd>

  <dt><%= t('role.update_ability') %>:</dt>
  <dd>
  <% if @role.update_ability %>
  <span class="glyphicon glyphicon-plus"></span>          
  <% else %>
  <span class="glyphicon glyphicon-minus"></span>
  <% end %>
  </dd>

  <dt><%= t('role.delete_ability') %>:</dt>
  <dd>
  <% if @role.delete_ability %>
  <span class="glyphicon glyphicon-plus"></span>          
  <% else %>
  <span class="glyphicon glyphicon-minus"></span>
  <% end %>
  </dd>

</dl>
