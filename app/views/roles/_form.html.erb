<%= bootstrap_form_for @role do |f| %>
  <% if @role.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h4>

      <ul>
      <% @role.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  
    
  <%= f.text_field :title %>
  <%= f.text_area :description %>
  <%= f.select :user_ids, User.all.map{|u|[u.nickname, u.id]}, { hide_label: true }, { :multiple => true } %>
  <%= f.check_box :create_ability, class: "form-control" %>
  <%= f.check_box :read_ability, class: "form-control" %>
  <%= f.check_box :update_ability, class: "form-control" %>
  <%= f.check_box :delete_ability, class: "form-control" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
