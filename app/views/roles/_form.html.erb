<%= bootstrap_form_for @role do |f| %>
    <% if @role.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@role.errors.count, "error") %></h4>

          <ul>
            <% @role.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.label t('role.title') %>
    <%= f.text_field :title, hide_label: true %>
    <%= f.label t('role.description') %>
    <%= f.text_area :description, hide_label: true %>
    <%= f.label t('role.users') %>
    <%= f.select :user_ids, User.all.map { |u| [u.nickname, u.id] }, {hide_label: true}, {:multiple => true} %>
    <%= f.check_box :create_ability, label: t('role.create_ability'), class: "form-control" %>
    <%= f.check_box :read_ability, label: t('role.read_ability'), class: "form-control" %>
    <%= f.check_box :update_ability, label: t('role.update_ability'), class: "form-control" %>
    <%= f.check_box :delete_ability, label: t('role.delete_ability'), class: "form-control" %>
    <%= f.submit t('role.save'), class: "btn btn-primary" %>
<% end %>
