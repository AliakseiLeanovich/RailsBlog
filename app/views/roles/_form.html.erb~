<%= form_for(@role, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @role.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h4>

      <ul>
      <% @role.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :create_ability, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :create_ability, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :read_ability, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :read_ability, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :update_ability, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :update_ability, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :delete_ability, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :delete_ability, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
