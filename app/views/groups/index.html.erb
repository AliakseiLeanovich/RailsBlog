<div class="page-header">
  <h1><%= t('group.groups') %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('group.title') %></th>
      <th><%= t('group.description') %></th>
      <th><%= t('group.created_at') %></th>
      <th><%= t('group.users') %></th>
      <th><%= t('group.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.title, group_path(group) %></td>
        <td><%= group.description %></td>
        <td><%= group.created_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= group.users.map{|user| user.nickname}.join(', ').html_safe %></td>
        <td>
          <%= link_to t('group.edit'),
                      edit_group_path(group), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('group.delete'),
                      group_path(group),
                      :method => :delete,
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('group.new'), new_group_path, :class => 'btn btn-primary' %>
