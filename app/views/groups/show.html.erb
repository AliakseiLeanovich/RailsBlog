<div class="page-header">
  <h1><%= t('group.label') %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t('group.title') %>:</strong></dt>
  <dd><%= @group.title %></dd>
  <dt><strong><%= t('group.description') %>:</strong></dt>
  <dd><%= @group.description %></dd>
  <dt><strong><%= t('group.users') %>:</strong></dt>
  <dd><%= @group.users.map{|user| user.nickname}.join(', ').html_safe %></dd>
</dl>

<%= link_to t('group.back'),
              groups_path, :class => 'btn btn-default'  %>
<%= link_to t('group.edit'),
              edit_group_path(@group), :class => 'btn btn-default' %>
<%= link_to t('group.delete'),
              group_path(@group),
              :method => 'delete',
              :class => 'btn btn-danger' %>
